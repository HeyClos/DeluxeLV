# Trestle ETL Pipeline - Production Configuration
# Use this configuration for production environment

# =============================================================================
# API Configuration
# =============================================================================
TRESTLE_CLIENT_ID=your_production_client_id
TRESTLE_CLIENT_SECRET=your_production_client_secret
# Note: Cotality migrated Trestle API to api.cotality.com domain in 2025
TRESTLE_API_BASE_URL=https://api.cotality.com/trestle/odata
TRESTLE_TOKEN_URL=https://api.cotality.com/trestle/oidc/connect/token
TRESTLE_API_TIMEOUT=60

# =============================================================================
# Database Configuration
# =============================================================================
MYSQL_HOST=prod-db.example.com
MYSQL_PORT=3306
MYSQL_DATABASE=real_estate
MYSQL_USER=etl_prod
MYSQL_PASSWORD=secure_production_password
MYSQL_CHARSET=utf8mb4

# =============================================================================
# ETL Configuration (Production Settings)
# =============================================================================
# Full batch size for efficiency
BATCH_SIZE=1000
# Maximum retries for reliability
MAX_RETRIES=3
INCREMENTAL_FIELD=ModificationTimestamp
# Warning level to reduce log volume
LOG_LEVEL=WARNING
LOCK_FILE_PATH=/var/run/trestle-etl/etl.lock
LOG_DIR=/var/log/trestle-etl

# =============================================================================
# Alert Configuration (Full Alerting for Production)
# =============================================================================
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_RECIPIENTS=ops@example.com,oncall@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=alerts@example.com
SMTP_PASSWORD=smtp_password

ALERT_WEBHOOK_ENABLED=true
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
