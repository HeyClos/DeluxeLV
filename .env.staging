# Trestle ETL Pipeline - Staging Configuration
# Use this configuration for staging/QA environment

# =============================================================================
# API Configuration
# =============================================================================
TRESTLE_CLIENT_ID=your_staging_client_id
TRESTLE_CLIENT_SECRET=your_staging_client_secret
TRESTLE_API_BASE_URL=https://api-prod.corelogic.com/trestle/odata
TRESTLE_TOKEN_URL=https://api.cotality.com/trestle/oidc/connect/token
TRESTLE_API_TIMEOUT=45

# =============================================================================
# Database Configuration
# =============================================================================
MYSQL_HOST=staging-db.example.com
MYSQL_PORT=3306
MYSQL_DATABASE=real_estate_staging
MYSQL_USER=etl_staging
MYSQL_PASSWORD=staging_password
MYSQL_CHARSET=utf8mb4

# =============================================================================
# ETL Configuration (Staging Settings)
# =============================================================================
# Moderate batch size for testing
BATCH_SIZE=500
# Standard retries
MAX_RETRIES=2
INCREMENTAL_FIELD=ModificationTimestamp
# Info logging for staging
LOG_LEVEL=INFO
LOCK_FILE_PATH=/tmp/trestle_etl_staging.lock
LOG_DIR=/var/log/trestle-etl

# =============================================================================
# Alert Configuration (Limited for Staging)
# =============================================================================
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_RECIPIENTS=dev-team@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=alerts@example.com
SMTP_PASSWORD=smtp_password

ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URL=
