# Trestle ETL Pipeline - Development Configuration
# Use this configuration for local development and testing

# =============================================================================
# API Configuration
# =============================================================================
TRESTLE_CLIENT_ID=your_dev_client_id
TRESTLE_CLIENT_SECRET=your_dev_client_secret
# Note: Cotality migrated Trestle API to api.cotality.com domain in 2025
# For UAT/sandbox testing, use: https://api-uat.corelogic.com/trestle/odata
TRESTLE_API_BASE_URL=https://api.cotality.com/trestle/odata
TRESTLE_TOKEN_URL=https://api.cotality.com/trestle/oidc/connect/token
TRESTLE_API_TIMEOUT=30

# =============================================================================
# Database Configuration
# =============================================================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=real_estate_dev
MYSQL_USER=dev_user
MYSQL_PASSWORD=dev_password
MYSQL_CHARSET=utf8mb4

# =============================================================================
# ETL Configuration (Development Settings)
# =============================================================================
# Smaller batch size for faster iteration
BATCH_SIZE=100
# Fewer retries for faster failure feedback
MAX_RETRIES=1
INCREMENTAL_FIELD=ModificationTimestamp
# Debug logging for development
LOG_LEVEL=DEBUG
LOCK_FILE_PATH=/tmp/trestle_etl_dev.lock
LOG_DIR=logs

# =============================================================================
# Alert Configuration (Disabled for Development)
# =============================================================================
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_RECIPIENTS=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URL=
