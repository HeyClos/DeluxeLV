# Trestle ETL Pipeline Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# API Configuration
# =============================================================================
# CoreLogic Trestle API credentials (required)
TRESTLE_CLIENT_ID=your_client_id
TRESTLE_CLIENT_SECRET=your_client_secret

# API endpoints (optional - defaults shown)
TRESTLE_API_BASE_URL=https://api-prod.corelogic.com/trestle/odata
TRESTLE_TOKEN_URL=https://api.cotality.com/trestle/oidc/connect/token
TRESTLE_API_TIMEOUT=30

# =============================================================================
# Database Configuration
# =============================================================================
# MySQL connection settings (required)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=real_estate
MYSQL_USER=etl_user
MYSQL_PASSWORD=secure_password
MYSQL_CHARSET=utf8mb4

# =============================================================================
# ETL Configuration
# =============================================================================
# Processing settings (optional - defaults shown)
BATCH_SIZE=1000
MAX_RETRIES=3
INCREMENTAL_FIELD=ModificationTimestamp
LOG_LEVEL=INFO
LOCK_FILE_PATH=/tmp/trestle_etl.lock
LOG_DIR=logs

# =============================================================================
# Alert Configuration
# =============================================================================
# Email alerts (optional)
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_RECIPIENTS=admin@example.com,ops@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=alerts@example.com
SMTP_PASSWORD=smtp_password

# Webhook alerts (optional)
ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URL=https://hooks.example.com/etl-alerts
